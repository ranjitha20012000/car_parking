<h1> Edit Charges </h1>
<%= form_with scope: :charge, url: charges_path, local:true do |f|%>
      <div class="form-group">
        <div class="form-group row">
            <%= f.label :vehicle_type, class: "col-sm-2 col-form-label col-sm-2 col-form-label col-form-label-lg"%>
         <div class="col-sm-2 col-form-label col-sm-2 col-form-label col-form-label-lg">
          <%= f.label :vehicle_type,"Bike" %>
          <%= f.radio_button :vehicle_type, 'bike', checked: true  %>
          <%= f.label :vehicle_type,"Car"%>
          <%= f.radio_button :vehicle_type, 'car', checked: true  %>
         </div>
      </div>
      <div class="form-group row">
          <%= f.label :min_hours, class: "col-sm-2 col-form-label col-sm-2 col-form-label col-form-label-lg"%>
          <div class="col-sm-1">
              <%= f.number_field :min_hours, {min: 1,max:100} %>
          </div>
      </div>
      <div class="form-group row">
          <%= f.label :min_charge, class: "col-sm-2 col-form-label col-sm-2 col-form-label col-form-label-lg"%>
          <div class="col-sm-1">
              <%= f.number_field :min_charge, {min: 1,max:100} %>
          </div>
      </div>
      <div class="form-group row">
          <%= f.label :extra_hour_charges, class: "col-sm-2 col-form-label col-sm-2 col-form-label col-form-label-lg"%>
          <div class="col-sm-1">
              <%= f.number_field :extra_hour_charges, {min: 1,max:100} %>
          </div>
      </div>
      <div class="form-group row">
          <div class="col-auto my-1">
            <%= f.submit "Update" %>
            
          </div>  
      </div>  
      <div class="form-group row">
          <div class="col-auto my-1">
            <%=  link_to 'Cancel',charges_path%> 
          </div>  
     </div>
     

<% end %>




